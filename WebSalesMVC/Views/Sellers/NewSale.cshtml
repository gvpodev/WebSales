@model WebSalesMVC.Models.ViewModels.SaleFormViewModel;
@{
    ViewData["Title"] = "Create Sale";
}

<h2>@ViewData["Title"]</h2>

<h4>Sale</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <dl>
                    <dt>
                        @Html.DisplayFor(modelItem => modelItem.Seller.Name)
                    </dt>
                </dl> 
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Date" class="control-label"></label>
                <input asp-for="SalesRecord.Date" class="form-control" name="saleDate" value=@ViewData["saleDate"] />
                <span asp-validation-for="SalesRecord.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <input asp-for="SalesRecord.Amount" class="form-control" name="amount" value=@ViewData["amount"] />
                <span asp-validation-for="SalesRecord.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="SalesRecord.Status" class="control-label"></label>
                    <select asp-for="SalesRecord.Status" asp-items="@(new SelectList
                        (Enum.GetValues(typeof(WebSalesMVC.Models.Enums.SaleStatus))
                        .Cast<WebSalesMVC.Models.Enums.SaleStatus>()))"
                            class="form-control" name="status" value=@ViewData["status"]></select>
                </div>
            </div>
        </form>
    </div>
</div>